@page "{customerId:int}"

@model BlobStorage.Pages.Customers.DetailModel
@{
    @functions
    {
        public string containerName { get; set; }
        public void OnPost()
        {
            containerName = "images";
        }
    }
    ViewData["Title"] = "Detail";
}


<a asp-page="./List" class="btn btn-default"><i class="fa-solid fa-circle-arrow-left"></i></a>

<h2>@Model.Customer.Name</h2>
<div>
    ID: @Model.Customer.ID
</div>
<div>
    Location: @Model.Customer.Location
</div>
<div>
    BussineType: @Model.Customer.BussineType
</div>
