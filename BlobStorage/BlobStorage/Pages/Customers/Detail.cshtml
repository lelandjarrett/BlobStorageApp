<h1>DataBase</h1>
<table class="table">
    @foreach(var Image in Model.Image)
    {
        <tr>
            <td>@Image.ID</td>
            <td>@Image.FileName</td>
            <td>@Image.CustomerID</td>
            <td>
                <a class="btn btn-lg">
                    <i class="fa-solid fa-eye"></i>
                </a>
            </td>
             <td>
                <a class="btn btn-lg"
                    asp-page="./EditImage" 
                    asp-route-customerImageId="@Image.ID">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a class="btn btn-lg"
                    asp-page="./DeleteImage" 
                    asp-route-customerImageID="@Image.ID">
                    <i class="fa-solid fa-trash-can"></i>
                </a>
            </td>
        </tr>
    }
</table>



<a asp-page="./EditImage" asp-route-customerId=@Model.Customer.ID class="btn btn-primary"> Add New</a>








